package TransacationManagement;

import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.PreparedStatement;
import java.sql.ResultSet;
import java.sql.SQLException;
import java.sql.Statement;

public class Transaction {

	public static void main(String[] args) throws ClassNotFoundException, SQLException {
		Class.forName("com.mysql.jdbc.Driver");
		Connection con = DriverManager.getConnection("jdbc:mysql://localhost:3306/transaction", "root", "root");
		Statement s = con.createStatement();
		con.setAutoCommit(false);
		
		String query = "select id,empName,empLocation,empDesignation from trans where id = 101";
		ResultSet r = s.executeQuery(query);
		
		String query1 = "update trans set empName=Gaurav where id = 101";
		ResultSet r1 = s.executeQuery(query1);
		
		while(r1.next()) {
			System.out.println(r1.getInt("id"));
			System.out.println(r1.getString("empName"));
			System.out.println(r1.getString("empLocation"));
			System.out.println(r1.getString("empDesignation"));
		}
		
	
	}

}
